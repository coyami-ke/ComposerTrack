<Window x:Class="ComposerTrack.Views.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComposerTrack.ViewModels" d:DataContext="{d:DesignInstance Type=local:HomeVM}"
        mc:Ignorable="d"
        Title="HomeWindow" Height="570" Width="1000" WindowStartupLocation="CenterScreen" Background="#FF131517" WindowStyle="None" ResizeMode="NoResize">
    <Grid>


        <Grid.RowDefinitions>
            <RowDefinition Height="48" MouseDown="RowDefinition_MouseDown"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Background="#FF101113">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0.5" BlurRadius="2"/>
            </Border.Effect>
        </Border>

        <Menu Margin="32,0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="{x:Null}">
            <MenuItem Header="File" Foreground="White" >
                <MenuItem Header="Create project"/>
                <MenuItem Header="Open..."/>
            </MenuItem>
            <MenuItem Header="About program" Foreground="White">
                <MenuItem Header="About" Foreground="White"/>
            </MenuItem>
        </Menu>
        <Image Source="/ComposerTrack;component/Assets/close-window.png" HorizontalAlignment="Right" MouseDown="CloseWindow_MouseDown"/>

        <Border Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Height="500" Width="300" Background="#FF101113" Margin="10,5,0,0" CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0.5" BlurRadius="2"/>
            </Border.Effect>
            <Grid>
                <Button Content="Create project" Grid.Row="1" Height="88" Width="270" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" Background="#FF131517" Command="{Binding CreateProjectCommand}"/>
                <Button Content="Settings" Height="88" Width="270" HorizontalAlignment="Center" Margin="0,113,0,0" VerticalAlignment="Top" Background="#FF131517"/>
                <Image Source="/Assets/settings.png" Height="48" Width="48" Margin="45,133,207,319"/>
                <Image Source="/Assets/create-file.png" Height="40" Width="40" Margin="45,40,207,412"/>
            </Grid>
        </Border>
        <Border Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Height="500" Width="675" Background="#FF101113" Margin="315,5,0,0" CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0.5" BlurRadius="2"/>
            </Border.Effect>
            <ListBox Height="490" Width="665" Background="{x:Null}"/>
        </Border>
    </Grid>
</Window>
