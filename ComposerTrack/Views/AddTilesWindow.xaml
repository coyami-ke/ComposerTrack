<Window x:Class="ComposerTrack.Views.AddTilesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:ComposerTrack.Views"
        mc:Ignorable="d"
        Title="AddTilesWindow" Height="310" Width="600" WindowStyle="None" Background="#FF131517">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image Source="ComposerTrack;component/Assets/close-window.png" HorizontalAlignment="Right" MouseDown="CloseWindow_MouseDown"/>

        <Border Grid.Row="1" Background="#FF101113" CornerRadius="5">
            <Grid>
                <TextBox HorizontalAlignment="Left" VerticalAlignment="Center" Height="48" Width="370" Margin="20" BorderBrush="#FF4187B3"/>
                <Button HorizontalAlignment="Right" VerticalAlignment="Top" Content="Add" Margin="0,131,95,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
