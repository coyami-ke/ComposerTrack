<ui:UiWindow x:Class="ComposerTrack.Views.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComposerTrack.Views"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="EditorWindow" Height="600" Width="1000" ResizeMode="CanResize" Background="#ff121213" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <ui:UiWindow.Resources>
        <ControlTemplate x:Key="MenuItemTemplateEditor" TargetType="{x:Type MenuItem}">
            <Grid/>
        </ControlTemplate>
    </ui:UiWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="139*"/>
            <RowDefinition Height="45*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Menu Grid.ColumnSpan="2" Margin="0,0,160,0" Background="{x:Null}">
            <ui:MenuItem Header="File" Foreground="White">
                <ui:MenuItem Header="Add">
                    <ui:MenuItem Header="Tiles..."/>
                    <ui:MenuItem Header="Decorations..."/>
                </ui:MenuItem>
            </ui:MenuItem>
            <ui:MenuItem Header="Animation" Foreground="White"/>
        </Menu>

        <Border Grid.Column="0" Grid.Row="1" Background="#FF151516" CornerRadius="5" Margin="5,5,5,5">
            <Border.Effect>
                <DropShadowEffect BlurRadius="2" ShadowDepth="0.5"/>
            </Border.Effect>
            <TreeView Grid.Column="0" Grid.Row="1">
                <ui:TreeViewItem Header="Project name" IsExpanded="True">
                    <ui:TreeViewItem Header="Tiles" IsExpanded="True">
                        <ui:TreeViewItem.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Add..."/>
                            </ContextMenu>
                        </ui:TreeViewItem.ContextMenu>
                    </ui:TreeViewItem>
                    <ui:TreeViewItem Header="Decorations" IsExpanded="True"/>
                    <ui:TreeViewItem Header="Animations" IsExpanded="True"/>
                </ui:TreeViewItem>
            </TreeView>
        </Border>

        <Border Grid.Column="1" Grid.Row="1" Background="#FF151516" CornerRadius="5" Margin="5,5,5,5">
            <ui:DynamicScrollViewer>
                <Grid>
                    <Rectangle Height="20" Width="20" Stroke="White" StrokeThickness="5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Rectangle Height="20" Width="20" Stroke="White" StrokeThickness="5" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="788,0,0,0"/>
                </Grid>
            </ui:DynamicScrollViewer>
        </Border>
        <Border Background="#FF151516" Grid.ColumnSpan="2" Margin="5,10,5,10" Grid.Row="2">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0.5" BlurRadius="2"/>
            </Border.Effect>
            <Grid>
                <Line Y1="0" Y2="10" X1="0" X2="0" Margin="200,0,0,0" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Bottom" Stroke="White" Opacity="0.4" StrokeThickness="1"/>
                <TextBlock Margin="197,0,0,10" Text="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="White" Opacity="0.9"/>
            </Grid>
        </Border>
    </Grid>
</ui:UiWindow>
